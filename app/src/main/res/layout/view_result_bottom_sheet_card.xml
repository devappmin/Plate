<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clipToPadding="false"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_cv_bs_result_card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/image_v_bs_result_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_tv_bs_result_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/image_cv_bs_result_card"
        app:layout_constraintStart_toStartOf="parent"
        android:text="우리끼끼"/>

    <TextView
        android:id="@+id/location_tv_bs_result_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울특별시 동작구 상도동 숭실대학교 정보과학관"
        app:layout_constraintTop_toBottomOf="@id/title_tv_bs_result_card"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/price_tv_bs_result_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="50,000원"
        app:layout_constraintTop_toBottomOf="@id/location_tv_bs_result_card"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>