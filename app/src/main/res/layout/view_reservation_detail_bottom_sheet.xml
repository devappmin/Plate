<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:paddingTop="24dp"
    android:paddingBottom="40dp">

    <ImageButton
        android:id="@+id/button_v_exit_reservation_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_cancel_24"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_v_reservation_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/textDarkPrimary"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/linear_layout_dishList_reservation_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/text_v_reservation_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button_v_cancel_reservation_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/primary_button_background"
        android:backgroundTint="@color/colorDanger"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="예약취소"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_dishList_reservation_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>