<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textDarkPrimary"
        android:lines="2"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="회원님에 대해\n조금 더 알려주세요!" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMainImage"
        android:layout_alignLeft="@+id/ivMainImage"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:text="이름"
                android:textColor="@color/textDarkPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textedit_background"
                android:hint="Name"
                android:inputType="text"
                android:paddingStart="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:text="이메일"
                android:textColor="@color/textDarkPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textedit_background"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:text="비밀번호"
                android:textColor="@color/textDarkPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_pw"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textedit_background"
                android:hint="Password (At least 6 chars)"
                android:inputType="textPassword"
                android:paddingStart="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:text="비밀번호 확인"
                android:textColor="@color/textDarkPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_pw_verify"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textedit_background"
                android:hint="Enter your password again"
                android:inputType="textPassword"
                android:paddingStart="20dp" />
            <!--
            <TextView
                android:id="@+id/label_host_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textDarkPrimary"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="23dp"
                android:text="간단한 소개" />

            <EditText
                android:id="@+id/input_host_intro"
                android:layout_width="366dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/textedit_background"
                android:hint="Introduce yourself shortly"
                android:inputType="textPassword"
                android:paddingLeft="20dp" />
            -->

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_radius"
                android:text="회원으로 가입하기"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



