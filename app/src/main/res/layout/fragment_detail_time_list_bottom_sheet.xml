<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.DetailTimeListBottomSheet">

    <TextView
        android:id="@+id/title_DetailBottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/textDarkPrimary"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/date_DetailBottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/title_DetailBottomSheet"
        app:layout_constraintBaseline_toBaselineOf="@id/title_DetailBottomSheet"/>

    <RadioGroup
        android:id="@+id/radioGroup_DetailBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_DetailBottomSheet">

    </RadioGroup>

    <Button
        android:id="@+id/purchase_button_DetailBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결제하기"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/detail_bottom_sheet_button"
        android:enabled="false"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_DetailBottomSheet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>