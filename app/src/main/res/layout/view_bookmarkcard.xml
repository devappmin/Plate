<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:clickable="true"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_bookmarkcard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dining_name_bookmarkcard"
            android:textStyle="bold"
            android:textColor="@color/textDarkPrimary"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_view_bookmarkcard"/>

        <TextView
            android:id="@+id/dining_date_bookmarkcard"
            android:textStyle="bold"
            android:textColor="@color/textDarkPrimary"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toRightOf="@+id/image_view_bookmarkcard"
            app:layout_constraintTop_toBottomOf="@+id/dining_name_bookmarkcard"/>

        <TextView
            android:id="@+id/dining_location_bookmarkcard"
            android:textSize="13dp"
            android:textColor="@color/textDarkSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintLeft_toRightOf="@+id/image_view_bookmarkcard"
            app:layout_constraintTop_toBottomOf="@+id/dining_date_bookmarkcard"
            app:layout_constraintRight_toRightOf="parent"/>

        <CheckBox
            android:id="@+id/checkbox_bookmarkcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:checked="true"
            android:button="@drawable/checkbox_bookmark"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>